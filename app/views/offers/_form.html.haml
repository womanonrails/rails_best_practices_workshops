= form_for @offer, :html => { :class => "form-horizontal" } do |f|
  -if @offer.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@offer.errors.count, "error")} prohibited this offer from being saved:"

      %ul
        - @offer.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :user, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :user, :class => 'form-control'
  .form-group
    = f.label :message, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :message, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
